<?xml version="1.0"?>

<launch>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/> 
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- Start "skye_controls" to control Skye in Gazebo. -->
  <node name="skye_controls_node" pkg="skye_controls" type="skye_controls_node"
        respawn="false" output="screen"/>

<!-- Start up the dynamic reconfigure GUI. -->
  <node pkg="rqt_reconfigure" type="rqt_reconfigure" name="rqt_reconfigure"/>

  <!-- Start up rqt_console so we can see the output of listener. -->
  <node pkg="rqt_console" type="rqt_console" name="rqt_console"/>

  <rosparam command="load" file="$(find skye_controls)/skye_controls.yaml"/>

</launch>
