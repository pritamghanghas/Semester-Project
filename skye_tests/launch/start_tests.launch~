<?xml version="1.0"?>

<launch>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/> 
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- Call pkg "skye_gazebo" to start gazebo and spawn Skye. -->
  <include file="$(find skye_gazebo)/launch/skye_empty_world.launch">
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- Start "skye_ros_node" to provide an interface to interact with Skye in Gazebo. -->
  <node name="skye_ros_node" pkg="skye_ros" type="skye_ros_node"
        respawn="false" output="screen"/>

  <!-- Start "skye_tests" to perform tests on Skye in Gazebo. -->
  <node name="skye_tests_node" pkg="skye_tests" type="skye_tests_node"
        respawn="false" output="screen"/>
  <rosparam command="load" file="$(find skye_tests)/skye_tests_launch.yaml"/>

</launch>
